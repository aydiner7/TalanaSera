<UserControl x:Class="TalanaService.Nesneler.MenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TalanaService.Nesneler"
             mc:Ignorable="d" 
             Height="80" Width="260" Margin="20 0 20 5">
    <Border x:Name="border"  Cursor="Hand" CornerRadius="10" MouseEnter="border_MouseEnter" MouseLeave="border_MouseLeave" MouseLeftButtonDown="border_MouseLeftButtonDown">
        <Grid>
            <Image x:Name="menuresim" Source="/TalanaService;component/Assets/greenhouse2.png" VerticalAlignment="Top" HorizontalAlignment="Left" Height="50" Margin="35,15,0,0" />
            <Label x:Name="menuIsim" Content="Seralar" Foreground="Black" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" Margin="125,20,0,0" Opacity=".6"/>
        </Grid>
    </Border>
</UserControl>
